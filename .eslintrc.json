{
	"extends": "@alhadis",
	"parser": "babel-eslint",
	"env": {
		"browser": false,
		"mocha":   false,
		"node":    false
	},
	"ignorePatterns": ["test.js", "test.mjs"],
	"overrides": [{
		"files":   ["smoke-test.js"],
		"globals": {"console": true}
	},{
		"files": ["lib/flags.mjs"],
		"rules": {"brace-style": 0},
		"env":   {"browser": true},
		"globals": {
			"process":    true,
			"testRunner": true
		}
	},{
		"files": ["lib/shims.mjs"],
		"settings": {
			"import/core-modules": ["electron", "std"]
		},
		"env": {
			"browser": true,
			"node":    true
		},
		"globals": {
			"Deno":       true,
			"globalThis": true,
			"os":         true,
			"printErr":   true,
			"read":       true,
			"readbuffer": true,
			"scriptArgs": true,
			"std":        true
		},
		"rules": {
			"require-atomic-updates": 0,
			"multiline-ternary": 0
		}
	}]
}
